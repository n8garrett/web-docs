{% extends "layouts/base.njk" %}
{% block content %}
<div class="rvt-layout__wrapper rvt-layout__wrapper--details rvt-container-lg">
    <div class="rvt-layout__sidebar" id="section-nav">
        <p>sidebar</p>

    </div>
    
    <div class="rvt-layout__content">
        
            <div class="rvt-m-tb-xxl rvt-m-tb-md-md-up rvt-p-bottom-md rvt-border-bottom rvt-flow rvt-prose">
                <h1>{{ title }}</h1>
                {% if description %}
                    <p class="rvt-ts-20 rvt-color-black-500">{{ description }}</p>
                {% endif %}
            </div>
        <div class="rvt-prose rvt-flow">
            {{ content | safe }}
        </div>
    </div>
</div>
{% endblock %}