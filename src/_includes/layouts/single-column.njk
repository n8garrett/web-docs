{% extends "layouts/base.njk" %}
{% block content %}
<div class="rvt-layout__wrapper rvt-layout__wrapper--single rvt-container-sm">
    <div class="rvt-layout__content">
        {% if not hero_title %}
            <div class="rvt-m-tb-xxl rvt-m-tb-md-md-up rvt-p-bottom-md rvt-border-bottom rvt-flow rvt-prose">
                <h1>{{ title }}</h1>
                {% if page_summary %}
                    <p class="rvt-ts-20 rvt-color-black-500">{{ page_summary }}</p>
                {% endif %}
            </div>
        {% endif %}
        <div class="rvt-prose rvt-flow">
            {{ content | safe }}
        </div>
    </div>
</div>
{% endblock %}